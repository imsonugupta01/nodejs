{
  "name": "@botpress/chat",
  "version": "0.4.1",
  "description": "Botpress Chat API Client",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "check:type": "tsc --noEmit",
    "gen:client": "ts-node -T ./openapi.ts --out-dir ./src/gen",
    "build:type": "tsc -p ./tsconfig.build.json",
    "build:browser": "ts-node -T ./build.ts --platform browser",
    "build:node": "ts-node -T ./build.ts --platform node",
    "build": "pnpm build:type && pnpm build:node && pnpm build:browser",
    "test": "pnpm test:e2e",
    "test:e2e": "ts-node -T ./e2e/node.ts"
  },
  "dependencies": {
    "axios": "1.2.5",
    "browser-or-node": "^2.1.1",
    "event-source-polyfill": "^1.0.31",
    "eventsource": "^2.0.2",
    "jsonwebtoken": "^9.0.2",
    "qs": "^6.11.2",
    "type-fest": "^3.4.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@bpinternal/yargs-extra": "^0.0.3",
    "@types/event-source-polyfill": "^1.0.2",
    "@types/eventsource": "^1.1.12",
    "@types/json-schema": "^7.0.15",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/node": "^20.6.0",
    "@types/qs": "^6.9.8",
    "@types/web": "^0.0.115",
    "chat-api": "workspace:*",
    "esbuild": "^0.16.12",
    "esbuild-plugin-polyfill-node": "^0.3.0",
    "ts-node": "^10.9.1"
  }
}
